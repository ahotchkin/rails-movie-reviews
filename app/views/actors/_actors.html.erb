<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col"><% link_to sortable("name") %></th>
      <th scope="col"><% link_to sortable("number of movies") %></th>
    </tr>
  </thead>
  <tbody>
    <% actors.each do |actor| %>
      <% if movie && current_user.admin %>
        <% movie_actor = MovieActor.find_movie_actor(movie, actor).last %>
        <tr>
        <td><%= link_to actor.full_name, actor_path(actor) %> - <%= link_to "Delete", movie_actor_path(movie_actor), :method => :delete %></td>
      <% else %>
        <tr>
        <td><%= link_to actor.full_name, actor_path(actor) %></td>
      <% end %>
      <td><%= actor.number_of_movies %></td>
      </tr>
    <% end %>
  </tbody>
</table>
