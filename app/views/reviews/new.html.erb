<% if @review.movie %>
  <h1>New Review for <%= @review.movie.title %></h1>
<% else %>
  <h1>New Review</h1>
<% end %>

<%= form_for [@review.movie, @review] do |f| %>
  <% if !@review.movie %>
    <%= f.label :movie %>
    <%= collection_select :review, :movie_id, Movie.all, :id, :title, {:include_blank => "Please select a movie to review"} %><br><br>
  <% else %>
    <%= f.hidden_field :movie_id %>
  <% end %>
  <%= f.label "Rating (1-5):" %>
  <%= f.number_field :rating %>
  <br><br>
  <%= f.label "Review:" %>
  <br>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit "Publish Review" %>
<% end %>
