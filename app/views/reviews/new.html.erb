<h1>New Review</h1>

<%# need to assign movie id %>
<%= form_for @review, url: "/movies/:movie_id/reviews" do |f| %>
  <%# drop down list that already has the correct movie selected %>
  <%= f.label "Rating (1-5):" %>
  <%= f.number_field :rating %>
  <br><br>
  <%= f.label "Review:" %>
  <br>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit "Publish Review" %>
<% end %>
