<% if @review.movie %>
  <h1>New Review for <%= @review.movie.title %></h1>
<% else %>
  <h1>New Review</h1>
<% end %>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@review.movie, @review] do |f| %>
  <% if !@review.movie %>
    <%= f.label "Movie:" %>
    <%= collection_select :review, :movie_id, Movie.all, :id, :title, {:include_blank => "Please select a movie to review"} %><br><br>
  <% else %>
    <%= f.hidden_field :movie_id %>
  <% end %>
  <%= f.label "Rating (1-5):" %>
  <%= f.number_field :rating %>
  <br><br>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label "Review:" %>
  <br>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit "Publish Review" %>
<% end %>
