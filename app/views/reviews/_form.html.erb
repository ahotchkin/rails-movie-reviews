<%= form_for review do |f| %>
  <% if !review.movie %>
    <%= f.label "Movie:" %>
    <%= collection_select :review, :movie_id, @movies, :id, :title, {:include_blank => "Please select a movie to review"} %><br><br>
  <% else %>
    <%= f.hidden_field :movie_id %>
  <% end %>
  <%= f.label "Rating (1-5):" %>
  <%= f.number_field :rating %>
  <br><br>
  <%= f.label "Title:" %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label "Review:" %>
  <br>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit "Publish Review" %>
<% end %>
