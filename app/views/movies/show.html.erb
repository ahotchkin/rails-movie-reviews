<div class="info-header">
  <h1><%= @movie.title %></h1>
</div>

<div class="info">
  Genre(s):
  <ul>
    <%= render partial: "genres/genres", :locals => {:genres => @movie.genres, :movie => @movie} %>
  </ul>

  Starring:
  <ul>
    <%= render partial: "actors/actors", :locals => {:actors => @movie.actors, :movie => @movie} %>
  </ul>

  Synopsis:
  <p><%= @movie.synopsis %></p>
  <br>
</div>

  <%= link_to "Read Reviews", movie_reviews_path(@movie), :class => "btn btn-secondary" %>
  <%= link_to "Write a Review", new_movie_review_path(@movie), :class => "btn btn-secondary" %>
  <%= edit_movie_link %>
