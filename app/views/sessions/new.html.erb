<h1>Log In</h1>

<%= form_for :user, url: "/login", html: { :class => "new_user form-group" } do |f| %>
  <%= f.label "Username:" %>
  <%= f.text_field :username, :class => "form-control" %>
  <br>
  <%= f.label "Password:" %>
  <%= f.password_field :password, :class => "form-control" %>
  <br>
  <%= f.submit "Log In", :class => "btn btn-secondary" %>
  <%= button_to "Log in with Google", "/auth/google_oauth2", :class => "btn btn-secondary" %>
<% end %>
